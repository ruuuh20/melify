<h2>Album Info</h2>

<div class="album-info">
  <div class="info">


  <div class="thumb">
    <img class="thumbnail" src="<%= @album.images[1]["url"] %>" alt="">
  </div>


  <div class="details">
    <div class="title">
      <h3><%= @album.name %></h3>

    </div>
    <div class="sub-title">
      <% @album.artists.each do |artist| %>
      <h3>
        <%= artist.name %>
      </h3>
      <% end %>

      <dl class="list">
										<dt>Release Date</dt>
										<dd><%= @album.release_date %></dd>
										<dt>Genres</dt>
										  <%= @album.genres.each do |genre| %>
                        <dd><%= genre %></dd>
                      <% end %>
										<dt>Label</dt>
                    <% @album.copyrights.each do |copy| %>
										  <dd><%= copy["text"] %></dd>
                    <% end %>
										<dt>기획사</dt>
										<dd>VMC</dd>
				</dl>

    </div>

  </div>

  <div class="section">
    <div class="tracklist">
      <div class="title">
        <h3>Tracks(<%= @album.tracks.length %>)</h3>

      </div>
      <table border="1" style="width:100%">
						<colgroup>
							<col style="width: 15px"><!-- checkbox -->
							<col style="width: 62px"><!-- 순서 & 순위 -->
							<col style="width: 24px"><!-- 곡 상세가기 -->
							<col><!-- 곡정보 -->
							<col style="width: 135px"><!-- 좋아요 -->
							<col style="width: 45px"><!-- 듣기 -->
							<col style="width: 52px"><!-- 담기 -->
							<col style="width: 52px"><!-- 다운 -->
							<col style="width: 52px"><!-- 뮤비 -->

						</colgroup>
			<thead>

					<tr>
						<th scope="col">
							<div class="wrap t_right"><input type="checkbox" title="CD전체 선택" class="input_check d_checkall"></div>
						</th>
						<th scope="col">
							<div class="wrap t_center"><span class="rank">#</span></div>
						</th>
						<th scope="col">
							<div class="wrap none"></div>
						</th>
						<th scope="col">
							<div class="wrap pd_l_12">Title</div>
						</th>
						<th scope="col">
							<div class="wrap pd_l_30">Likes</div>
						</th>
						<th scope="col">
							<div class="wrap t_center">Listen</div>
						</th>
						<th scope="col">
							<div class="wrap t_center">Add</div>
						</th>
						<th scope="col">
							<div class="wrap t_center">Download</div>
						</th>
						<th scope="col">
							<div class="wrap t_center">MV</div>
						</th>

					</tr>

			</thead>
			<tbody>

								<tr data-group-items="cd1">
									<td><div class="wrap t_right"><input type="checkbox" title="<%= @album.tracks.first.name %>" class="input_check " name="input_check" value="31213986"></div></td>
									<td><div class="wrap t_center"><span class="rank ">1</span><span class="none">위</span></div></td>
									<td><div class="wrap">
										<%= link_to fa_icon('info-circle'), "#", :class =>"btn button_icons type03 song_info" %> <span class="none"></span>
									</div></td>
									<td><div class="wrap">
										<div class="wrap_song_info">
											<div class="ellipsis">
                        <span>
												<span title="타이틀 곡" class="bullet_icons title"><span class="none"><%= link_to @album.tracks.first.name, @album.tracks.first.uri  %></span></span>

											</span></div><br>


										</div>
									</div></td>
									<td><div class="wrap">
										<button type="button" class="button_etc like" title="시대 (Feat. 카더가든) (Prod. CODE KUNST) 좋아요" data-song-no="31213986" data-song-menuid="28010101"><span class="odd_span">좋아요</span>
<span class="cnt">
<span class="none">총건수</span>
1,117</span></button>
									</div></td>
									<td><div class="wrap t_center">
										<button type="button" title="듣기" class="button_icons play " onclick="melon.play.playSong('28010101',31213986);"><span class="none">듣기</span></button>
									</div></td>
									<td><div class="wrap t_center">
										<button type="button" title="담기" class="button_icons scrap " onclick="melon.play.addPlayList('31213986');"><span class="none">담기</span></button>
									</div></td>
									<td><div class="wrap t_center">
										<button type="button" title="다운로드" class="button_icons flac " onclick="melon.buy.goBuyProduct('frm', '31213986', '3C0001', '','110', '28010101');"><span class="none">다운로드</span></button>
									</div></td>
									<td><div class="wrap t_center">
										<button type="button" title="뮤직비디오" class="button_icons video disabled" disabled="disabled" onclick="melon.link.goMvDetail('28010101', '31213986','song');"><span class="none">뮤직비디오</span></button>
									</div></td>

								</tr>

			</tbody>
		</table>

    </div>

  </div>

  <div class="section">
    <div class="comments">
      <h3>Comments</h3>

    </div>
  </div>

  </div>

</div>
