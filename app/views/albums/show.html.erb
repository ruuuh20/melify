<h1>Album Info</h1>

<div class="album-info">
  <div class="thumb">
    <img src="<%= @album.images[1]["url"] %>" alt="">
  </div>


  <div class="details">
    <div class="title">
      <h3><%= @album.name %></h3>

    </div>
    <div class="sub-title">
      <% @album.artists.each do |artist| %>
      <h3>
        <%= artist.name %>
      </h3>
      <% end %>

    </div>

  </div>

</div>
